</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #6366f1;
            --primary-light: #818cf8;
            --primary-dark: #4f46e5;
            --secondary: #f59e0b;
            --danger: #ef4444;
            --success: #10b981;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--gray-100);
            color: var(--gray-800);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        .title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--gray-900);
            text-align: center;
            margin-bottom: 2rem;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: fadeIn 0.8s ease;
        }

        .tabs {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 2rem;
            animation: slideDown 0.6s ease;
        }

        .tab-button {
            background-color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .tab-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .tab-button.active {
            background-color: var(--primary);
            color: white;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

        .tab-button i {
            font-size: 0.9rem;
        }

        .view {
            display: none;
            opacity: 0;
            transform: translateY(10px);
            animation: fadeInUp 0.5s ease forwards;
        }

        .view.active {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .view-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            animation: fadeIn 0.6s ease;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--gray-900);
            position: relative;
            display: inline-block;
        }

        h2::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -5px;
            width: 50%;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), transparent);
            border-radius: 3px;
        }

        .total-expense {
            background: white;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .total-label {
            font-weight: 600;
            color: var(--gray-600);
        }

        .total-amount {
            font-weight: 700;
            color: var(--primary);
        }

        .expense-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .expense-card {
            background-color: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            animation: cardEntrance 0.6s ease;
        }

        .expense-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .expense-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary);
        }

        .expense-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .expense-date-category {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .expense-date {
            font-size: 0.85rem;
            color: var(--gray-500);
            font-weight: 500;
        }

        .expense-category-badge {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            width: fit-content;
        }

        .food {
            background-color: rgba(239, 68, 68, 0.1);
            color: var(--danger);
        }

        .transport {
            background-color: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }

        .utilities {
            background-color: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .groceries {
            background-color: rgba(245, 158, 11, 0.1);
            color: var(--secondary);
        }

        .expense-amount {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
        }

        .expense-description {
            font-size: 0.95rem;
            color: var(--gray-600);
            margin-bottom: 1.5rem;
            line-height: 1.5;
        }

        .expense-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }

        .action-btn {
            background: none;
            border: none;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            transform: scale(1.1);
        }

        .edit {
            color: var(--gray-500);
            background-color: var(--gray-100);
        }

        .edit:hover {
            color: var(--primary);
            background-color: rgba(99, 102, 241, 0.1);
        }

        .delete {
            color: var(--gray-500);
            background-color: var(--gray-100);
        }

        .delete:hover {
            color: var(--danger);
            background-color: rgba(239, 68, 68, 0.1);
        }

        .add-expense-card {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 150px;
        }

        .add-expense-btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
        }

        .add-expense-btn:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(99, 102, 241, 0.4);
        }

        .add-expense-btn i {
            transition: transform 0.3s ease;
        }

        .add-expense-btn:hover i {
            transform: rotate(90deg);
        }

        /* Animations */
        keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        keyframes cardEntrance {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Responsive */
        media (max-width: 768px) {
            .container {
                padding: 1.5rem 1rem;
            }

            .title {
                font-size: 2rem;
            }

            .tabs {
                flex-direction: column;
                align-items: stretch;
            }

            .view-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .total-expense {
                align-self: flex-end;
            }
        }

        media (max-width: 480px) {
            .expense-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function showView(view) {
            // Hide all views
            document.querySelectorAll('.view').forEach(v => {
                v.classList.remove('active');
                v.style.opacity = '0';
                v.style.transform = 'translateY(10px)';
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
            
            // Show selected view with animation
            const selectedView = document.getElementById(view + '-view');
            selectedView.classList.add('active');
            setTimeout(() => {
                selectedView.style.opacity = '1';
                selectedView.style.transform = 'translateY(0)';
            }, 10);
            
            // Set active button
            document.querySelector(`button[onclick="showView('${view}')"]`).classList.add('active');
        }

        // Add hover effect to expense cards
        document.querySelectorAll('.expense-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-5px)';
                card.style.boxShadow = '0 10px 20px rgba(0, 0, 0, 0.1)';
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0)';
                card.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.05)';
            });
        });

        // Add button hover effects
        document.querySelectorAll('.action-btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1)';
            });
            
            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    </script>
}